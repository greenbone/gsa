{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "gmp/*": ["src/gmp/*"],
      "web/*": ["src/web/*"],
      "version": ["src/version.js"],
      "@gsa/testing": ["src/testing.js"]
    }
  },
  "include": ["src", "vitest.projects.ts"],
  "exclude": ["node_modules", "build", "coverage"]
}
