          <label class="col-2 control-label"><xsl:value-of select="gsa:i18n ('Known Hosts', 'Alert')"/></label>
          <div class="col-10">
            <div class="form-item">
              <textarea name="method_data:scp_known_hosts"
                class="form-control"
