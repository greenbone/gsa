            <xsl:choose>
              <xsl:when test="$resource/writable = '0'">
                <xsl:value-of select="gsa:i18n (concat ($cap-type, ' is not writable'), $cap-type)"/>
              </xsl:when>
              <xsl:when test="not(gsa:may (concat ('delete_', $type)))">
